<h1>Burger Eater!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
    {{#each cats}}
    {{#unless sleepy}}
    {{> cats/cat-block sleep=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
    {{#each cats}}
    {{#if sleepy}}
    {{> cats/cat-block sleep=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devour?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="not-devoured" value="0"> Awake
    </div>

    <button type="submit">Add Burger</button>
</form>