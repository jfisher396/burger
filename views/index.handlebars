<div class="container">

    <div class="container main">
        <div class="row">

            <div class="col-md-4 col-sm-12">
                <h2>Burgers that are ready to eat!</h2>
                <div class="row">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>


            <div class="col-md-4 col-sm-12">
                <form class="create-form">
                    
                        <div class="form-group">
                            <h1 id="title">Burger Tracker!</h1>
                            {{!-- <img id="burger-image" src="/images/burger.jpg" alt="burger"> --}}
                            <label for="ca"></strong></label>
                            <input type="text" id="ca" name="name" placeholder="Burger Name">
                            <button type="submit">Add Burger</button>
                        </div>
                </form>
            </div>


            <div class="col-md-4 col-sm-12">
                <h2>Burgers that have been devoured!</h2>
                <div class="row">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>

        </div>

    </div>
</div>